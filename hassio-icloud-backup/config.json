{
  "name": "Home Assistant iCloud Backup",
  "version": "5.1.2",
  "slug": "hassio-icloud-backup",
  "description": "Backup Home Assistant snapshots to iCloud Drive using rclone",
  "url": "https://github.com/elKnurrie/elKnurrie-HA-Addons",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "panel_icon": "mdi:cloud-upload",
  "map": ["backup:ro"],
  "ports": {
    "8099/tcp": 8099
  },
  "ports_description": {
    "8099/tcp": "API for 2FA authentication (use from host)"
  },
  "options": {
    "icloud_username": "",
    "icloud_password": "",
    "icloud_2fa_code": "",
    "backup_source": "/backup",
    "icloud_folder": "HomeAssistantBackups",
    "retention_days": 14
  },
  "schema": {
    "icloud_username": "str",
    "icloud_password": "password",
    "icloud_2fa_code": "str?",
    "backup_source": "str",
    "icloud_folder": "str",
    "retention_days": "int"
  }
}
